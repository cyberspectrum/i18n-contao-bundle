{
  "name": "cyberspectrum/i18n-contao-bundle",
  "description": "Simple translation mapping and exporting of contao content",
  "license": "MIT",
  "type": "contao-bundle",
  "keywords": [
    "i18n"
  ],
  "authors": [
    {
      "name": "Christian Schiffler",
      "email": "c.schiffler@cyberspectrum.de",
      "homepage": "https://www.cyberspectrum.de",
      "role": "Maintainer"
    }
  ],
  "homepage": "https://www.cyberspectrum.de/",
  "support": {
    "email": "info@cyberspectrum.de",
    "issues": "https://github.com/cyberspectrum/i18n-contao-bundle/issues",
    "source": "https://github.com/cyberspectrum/i18n-contao-bundle"
  },
  "require": {
    "php": "^8.2",
    "ext-hash": "*",
    "ext-json": "*",
    "contao/core-bundle": "^4.13.0 || ^5.3",
    "cyberspectrum/i18n": "^1.1@dev",
    "cyberspectrum/i18n-bundle": "^1.1@dev",
    "cyberspectrum/i18n-contao": "^1.1@dev",
    "cyberspectrum/i18n-xliff": "^1.1@dev",
    "psr/log": "^2.0 || ^3.0",
    "symfony/config": "^5.4 || ^6.0",
    "symfony/console": "^5.4 || ^6.0",
    "symfony/dependency-injection": "^5.4 || ^6.0",
    "symfony/error-handler": "^5.4 || ^6.0",
    "symfony/expression-language": "^5.4 || ^6.0",
    "symfony/form": "^5.4 || ^6.0",
    "symfony/framework-bundle": "^5.4 || ^6.0",
    "symfony/http-foundation": "^5.4 || ^6.0",
    "symfony/http-kernel": "^5.4 || ^6.0",
    "symfony/options-resolver": "^5.4 || ^6.0",
    "symfony/routing": "^5.4 || ^6.0",
    "symfony/security-csrf": "^5.4 || ^6.0",
    "twig/twig": "^3.21"
  },
  "require-dev": {
    "contao-community-alliance/dc-general": "^2.3",
    "contao/manager-plugin": "^2.0",
    "cyberspectrum/i18n-metamodels": "^1.1@dev",
    "metamodels/core": "^2.3.0@dev",
    "phpcq/runner-bootstrap": "^1.0@dev"
  },
  "suggest": {
    "cyberspectrum/i18n-metamodels": "For MetaModels support"
  },
  "autoload": {
    "psr-4": {
      "CyberSpectrum\\I18N\\ContaoBundle\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "CyberSpectrum\\I18N\\ContaoBundle\\Test\\": "tests"
    }
  },
  "config": {
    "allow-plugins": {
      "composer/package-versions-deprecated": false,
      "contao-components/installer": false,
      "contao/manager-plugin": false,
      "php-http/discovery": false
    },
    "sort-packages": true
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.1.x-dev"
    },
    "contao-manager-plugin": "CyberSpectrum\\I18N\\ContaoBundle\\ContaoManager\\Plugin"
  }
}
